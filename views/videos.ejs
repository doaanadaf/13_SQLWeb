<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Videos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
<div class="container py-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h3 class="mb-0">YouTube Search</h3>
      <small class="text-muted">
        Logged in as <b><%= user.fullName %></b> (<%= user.email %>)
      </small>
    </div>

    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="/">Home</a>
      <form method="POST" action="/logout">
        <button class="btn btn-danger">Logout</button>
      </form>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" action="/videos" class="row g-2">
        <div class="col-md-10">
          <input class="form-control" name="q" value="<%= q %>" placeholder="Search YouTube...">
        </div>
        <div class="col-md-2 d-grid">
          <button class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>
  </div>

  <h5 class="mb-2">Results</h5>
  <div class="row g-3 mb-4">
    <% if (!results || results.length === 0) { %>
      <div class="col-12"><div class="alert alert-secondary">Search something above.</div></div>
    <% } %>

    <% results.forEach(v => { %>
      <div class="col-md-6">
        <div class="card h-100">
          <img src="<%= v.thumbnailUrl %>" class="card-img-top" alt="thumb">
          <div class="card-body">
            <h6 class="card-title"><%= v.title %></h6>
            <div class="text-muted small mb-2"><%= v.channelTitle %></div>

            <div class="d-flex gap-2">
              <a class="btn btn-outline-primary btn-sm" target="_blank" href="<%= v.url %>">Open</a>

              <form method="POST" action="/favorites">
                <input type="hidden" name="videoId" value="<%= v.videoId %>">
                <input type="hidden" name="title" value="<%- v.title %>">
                <input type="hidden" name="channelTitle" value="<%- v.channelTitle %>">
                <input type="hidden" name="thumbnailUrl" value="<%= v.thumbnailUrl %>">
                <input type="hidden" name="currentQuery" value="<%= q %>">
                <button class="btn btn-success btn-sm">Add</button>
              </form>
            </div>

          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <h5 class="mb-2">Favorites</h5>
  <div class="card">
    <div class="card-body">
      <% if (!favorites || favorites.length === 0) { %>
        <div class="alert alert-warning mb-0">No favorites yet.</div>
      <% } else { %>
        <div class="list-group">
          <% favorites.forEach(f => { %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center gap-3">
                <img src="<%= f.thumbnailUrl %>" style="width:90px;border-radius:8px;">
                <div>
                  <div class="fw-bold"><%= f.title %></div>
                  <div class="text-muted small"><%= f.channelTitle %></div>
                  <a class="small" target="_blank" href="https://www.youtube.com/watch?v=<%= f.videoId %>">Open</a>
                </div>
              </div>

              <form method="POST" action="/favorites/<%= f.id %>/delete?q=<%= encodeURIComponent(q) %>">
                <button class="btn btn-outline-danger btn-sm">Remove</button>
              </form>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

</div>
</body>
</html>
